BinSegmentOption: UntypedExprBinSegmentOption = {
    <s:@L> <o:VarName> "(" <value:OpOrSimpleExpr> ")" <e:@L> => {
        if o.as_str() == "unit" {
            BinSegmentOption::Unit {
                location: location(s, e),
                value: Box::new(value),
                short_form: false
            }
        } else if o.as_str() == "size" {
            BinSegmentOption::Size {
                location: location(s, e),
                value: Box::new(value),
                short_form: false
            }
        } else {
            BinSegmentOption::Invalid { label: o, location: location(s, e) }
        }
    },

    <s:@L> <value:Int> <e:@L> =>
        BinSegmentOption::Size {
            location: location(s, e),
            value: Box::new(value),
            short_form: true
        },

    BinSegmentOptionLiteral<BinSegmentOption> => <>,
}

BinSegmentOptionLiteral<T>: T = {
    <s:@L> <o:VarName> <e:@L> => {
        match o.as_str() {
            "binary" => BinSegmentOption::Binary { location: location(s, e) },
            "bytes" => BinSegmentOption::Binary { location: location(s, e) },
            "int" => BinSegmentOption::Integer { location: location(s, e) },
            "float" => BinSegmentOption::Float { location: location(s, e) },
            "bit_string" => BinSegmentOption::BitString { location: location(s, e) },
            "bits" => BinSegmentOption::BitString { location: location(s, e) },
            "utf8" => BinSegmentOption::UTF8 { location: location(s, e) },
            "utf16" => BinSegmentOption::UTF16 { location: location(s, e) },
            "utf32" => BinSegmentOption::UTF32 { location: location(s, e) },
            "utf8_codepoint" => BinSegmentOption::UTF8Codepoint { location: location(s, e) },
            "utf16_codepoint" => BinSegmentOption::UTF16Codepoint { location: location(s, e) },
            "utf32_codepoint" => BinSegmentOption::UTF32Codepoint { location: location(s, e) },
            "signed" => BinSegmentOption::Signed { location: location(s, e) },
            "unsigned" => BinSegmentOption::Unsigned { location: location(s, e) },
            "big" => BinSegmentOption::Big { location: location(s, e) },
            "little" => BinSegmentOption::Little { location: location(s, e) },
            "native" => BinSegmentOption::Native { location: location(s, e) },
            _ => BinSegmentOption::Invalid { label: o, location: location(s, e) },
        }
    }
}

