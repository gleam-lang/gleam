List: UntypedExpr = {
    <s:@L> "[" <elems:Comma<OpOrSimpleExpr>> <tail:("|" <OpOrSimpleExpr>)?>"]" <e:@L> => {
        let tail = tail.unwrap_or_else(|| UntypedExpr::Nil {
            meta: meta(s, e),
        });
        elems.into_iter().rev().fold(
            tail,
            |t, h| UntypedExpr::Cons {
                meta: t.meta().clone(),
                head: Box::new(h),
                tail: Box::new(t),
            }
        )
    }
}

