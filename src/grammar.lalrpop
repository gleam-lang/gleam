List: UntypedExpr = {
    "[" <elems:Comma<OpOrSimpleExpr>> <tail:("|" <OpOrSimpleExpr>)?>"]" <e:@L> => {
        let tail = tail.unwrap_or_else(|| Expr::Nil {
            meta: meta(e - 1, e),
            typ: (),
        });
        elems.into_iter().rev().fold(
            tail,
            |t, h| Expr::Cons {
                meta: t.meta().clone(),
                typ: (),
                head: Box::new(h),
                tail: Box::new(t),
            }
        )
    }
}

